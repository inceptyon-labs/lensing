{
  "name": "@lensing/monorepo",
  "version": "0.1.0",
  "description": "Lensing - A modern personal information dashboard built on SvelteKit",
  "type": "module",
  "private": true,
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "dev": "turbo run dev --no-cache --parallel",
    "build": "turbo run build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "turbo run test",
    "clean": "turbo clean && rm -rf node_modules **/node_modules .turbo",
    "changeset": "changeset",
    "changeset:version": "changeset version && pnpm install --no-frozen-lockfile",
    "publish": "turbo run publish && pnpm changeset:version"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@eslint/js": "^9.39.3",
    "eslint": "^9.39.3",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-svelte": "^3.15.0",
    "globals": "^17.3.0",
    "prettier": "^3.8.1",
    "prettier-plugin-svelte": "^3.4.1",
    "turbo": "^2.1.0",
    "typescript": "^5.5.0",
    "typescript-eslint": "^8.56.0",
    "vitest": "^2.0.0"
  },
  "packageManager": "pnpm@9.1.0",
  "keywords": [
    "dashboard",
    "home-assistant",
    "raspberry-pi",
    "sveltekit",
    "plugin-system"
  ],
  "author": "",
  "license": "MIT"
}
